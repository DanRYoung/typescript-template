{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "build/index.js",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "nodemon src/index.ts",
    "prebuild": "source scripts/get-commit-hash.sh && update_hash",
    "build": "tsc && cp package.json build/src",
    "bundle": "webpack",
    "make-binary": "pkg package.json",
    "compress": "tar -cvzf bundle/$npm_package_name-$npm_package_version-$(. ./scripts/get-commit-hash.sh && get_hash >&1).tar.gz bundle/*",
    "test": "jest",
    "lint": "eslint",
    "clean": "rm -rf node_modules bundle build"
  },
  "pkg": {
    "targets": [
      "node14-linux-x64",
      "node14-macos-x64",
      "node14-win-x64"
    ],
    "outputPath": "bundle"
  },
  "bin": "bundle/main.js",
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "eslint": "^7.32.0",
    "jest": "^27.2.1",
    "nodemon": "^2.0.12",
    "pkg": "^5.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0"
  }
}
